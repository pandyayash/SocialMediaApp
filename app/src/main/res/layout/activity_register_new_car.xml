<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/app_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_add_child_downarrow_w"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_add_child_downarrow_w"
            android:layout_marginTop="@dimen/activity_add_child_downarrow_h"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/ll_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:background="@drawable/rect_inner_boarder">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/select_make"
                    android:padding="@dimen/activity_add_child_new_margin_lr"
                    android:singleLine="true"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/txt_size_4" />

                <ImageView
                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:src="@drawable/down" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:background="@drawable/rect_inner_boarder">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/select_model"
                    android:padding="@dimen/activity_add_child_new_margin_lr"
                    android:singleLine="true"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/txt_size_4" />

                <ImageView
                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:src="@drawable/down" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:background="@drawable/rect_inner_boarder">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_badge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/select_badge_variant"
                    android:padding="@dimen/activity_add_child_new_margin_lr"
                    android:singleLine="true"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/txt_size_4" />

                <ImageView
                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:src="@drawable/down" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/autometic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_add_child_new_margin_tb"
                    android:layout_weight="1"
                    android:background="@drawable/rect_inner_boarder"
                    android:gravity="center">

                    <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                        android:id="@+id/autoText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@+id/auto"
                        android:duplicateParentState="false"
                        android:gravity="center"
                        android:padding="@dimen/activity_add_child_new_margin_lr"
                        android:singleLine="true"
                        android:text="@string/automatic"
                        android:textSize="@dimen/txt_size_4" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/manual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_add_child_new_margin_tb"
                    android:layout_weight="1"
                    android:background="@drawable/rect_inner_boarder"
                    android:gravity="center">

                    <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                        android:id="@+id/manualTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/activity_add_child_new_margin_lr"
                        android:singleLine="true"
                        android:text="@string/manual"
                        android:textSize="@dimen/txt_size_4" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@drawable/rect_inner_boarder">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_reg_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/registration_number"
                    android:inputType="textNoSuggestions|textCapSentences"
                    android:padding="@dimen/activity_add_child_new_margin_lr"
                    android:singleLine="true"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/txt_size_4"
                    android:textCursorDrawable="@drawable/edittext_cursor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@drawable/rect_inner_boarder">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/activity_add_child_new_margin_lr"
                    android:singleLine="true"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/txt_size_4"
                    android:textCursorDrawable="@drawable/edittext_cursor"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@drawable/rect_inner_boarder">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_km"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/km_traveled"
                    android:inputType="number"
                    android:padding="@dimen/activity_add_child_new_margin_lr"
                    android:singleLine="true"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/txt_size_4"
                    android:textCursorDrawable="@drawable/edittext_cursor"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@drawable/corner_button">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                    android:id="@+id/registerBtn"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:text="@string/register"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_more_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@drawable/corner_button"
                android:gravity="center">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:text="ADD MORE CAR"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_4" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_add_child_spinner_h"
                android:layout_marginRight="@dimen/activity_add_child_spinner_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@color/white"
                android:visibility="invisible">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:text="@string/register"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_size_4" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/app_footer" />

</LinearLayout>