<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/footer_small"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/gallery"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginBottom="@dimen/edittextpadding"
                        android:layout_marginLeft="@dimen/edittextpadding"
                        android:layout_marginRight="@dimen/edittextpadding"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Gallery"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/hours"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Hours"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/services"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="@dimen/edittextpadding"
                        android:layout_marginLeft="@dimen/edittextpadding"
                        android:layout_marginRight="@dimen/edittextpadding"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"

                        android:text="Services"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                            android:layout_width="0dp"
                            android:id="@+id/facilities"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="Facilities"
                            android:layout_marginRight="@dimen/edittextpadding"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_3" />

                        <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                            android:layout_width="0dp"
                            android:id="@+id/reviews"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="Reviews"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_3" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/footer_big"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_add_child_downarrow_h"
                    android:weightSum="5">

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/gallery_big"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginBottom="@dimen/edittextpadding"
                        android:layout_marginLeft="@dimen/edittextpadding"
                        android:layout_marginRight="@dimen/edittextpadding"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Gallery"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/hours_big"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Hours"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/services_big"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="@dimen/edittextpadding"
                        android:layout_marginLeft="@dimen/edittextpadding"
                        android:layout_marginRight="@dimen/edittextpadding"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Services"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />
                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/facilitie_big"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Facilities"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="0dp"
                        android:id="@+id/reviews_big"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/edittextpadding"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/edittextpadding"
                        android:text="Reviews"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>