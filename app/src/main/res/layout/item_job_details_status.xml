<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_back_left_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="@dimen/iv_forward_wh"
            android:layout_height="@dimen/iv_forward_wh"
            android:layout_gravity="center"/>

        <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/txt_size_2"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>