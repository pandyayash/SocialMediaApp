<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="@dimen/icon_back_left_margin"
        android:layout_marginRight="@dimen/icon_back_left_margin"
        android:layout_marginTop="@dimen/icon_back_left_margin">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/item_bg"
            android:padding="@dimen/SignIn_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                    android:id="@+id/textJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="Job Tittle #01"
                    android:textSize="@dimen/txt_size_2"
                    android:layout_weight="1"/>

                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/date"
                    android:text="July 13, 2017"
                    android:textSize="@dimen/txt_size_1"
                    android:layout_weight="1"
                    android:gravity="end"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_back_left_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textJobDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/date"
                        android:text="@string/short_dummy_text"
                        android:textSize="@dimen/txt_size_2"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/light_black"
                            android:text="Category :"
                            android:textSize="@dimen/txt_size_3"/>
                        <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                            android:id="@+id/textCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/date"
                            android:text="@string/short_dummy_text"
                            android:textSize="@dimen/txt_size_2"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/icon_back_left_margin"/>

                    </LinearLayout>
                    <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textCarModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_black"
                        android:text="Honda, City 2.0 TFSI Premium Plus"
                        android:textSize="@dimen/txt_size_3"/>

                    <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/txtPosterName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_size_3"
                        android:textColor="@color/date"
                        android:text="@string/app_name"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:layout_width="wrap_content"
                        android:id="@+id/txtName"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/date"
                        android:textSize="@dimen/txt_size_2" />

                    <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/txtAddress"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/icon_back_left_margin"
                        android:singleLine="true"
                        android:text="@string/short_dummy_text"
                        android:textColor="@color/date"
                        android:textSize="@dimen/txt_size_2" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_weight="2.1"
                    android:orientation="vertical">
                    <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/date"
                        android:text="Distance : 0 KM"
                        android:textSize="@dimen/txt_size_1"
                        android:gravity="end"/>



                    <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textResponses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Responses : 0"
                        android:textColor="@color/date"
                        android:layout_gravity="end"
                        android:textSize="@dimen/txt_size_1"
                        android:layout_marginTop="@dimen/icon_back_left_margin"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>