<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:layout_marginTop="@dimen/icon_back_left_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/SignIn_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:layout_weight="1.1">

            <aayushiprojects.greasecrowd.CustomViews.Widgets.CircularImageView
                android:id="@+id/avatar_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/no_user"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="-20dp"
            android:gravity="center"
            android:layout_weight="1">

            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_dummy_username"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_size_3"
                android:textAlignment="center"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal"
                android:gravity="center">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:max="5"
                    android:rating="0"
                    style="@style/RatingBarstyleNew"/>
                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    android:text="0"
                    android:textSize="@dimen/txt_size_3"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/icon_back_left_margin"/>

            </LinearLayout>

            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                android:id="@+id/txtReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Reviews : (0)"
                android:textAlignment="center"
                android:textSize="@dimen/txt_size_3"/>

            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                android:id="@+id/txtDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_size_3"
                android:textAlignment="center"
                android:text="12KM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.1">
            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                android:id="@+id/txtBidPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$10.00"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_3"
                android:background="@drawable/light_green_bg"
                android:textAlignment="center"
                android:padding="@dimen/margin_3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_back_left_margin"
                android:orientation="vertical"
                android:padding="@dimen/icon_back_left_margin"
                android:background="@drawable/corner_button">
                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Status"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_1"
                    android:textAlignment="center"
                    android:textAllCaps="false"/>
                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                    android:id="@+id/txtJobStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_award"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_3"
                    android:textAlignment="center"
                    android:textAllCaps="true"/>

            </LinearLayout>


            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                android:id="@+id/txtPrintQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_print_quote"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_3"
                android:background="@drawable/corner_button"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:padding="@dimen/margin_3dp"
                android:layout_marginTop="@dimen/icon_back_left_margin"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/SignIn_margin"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">











            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_3"
                android:text="@string/str_quote_from_garage"
                android:textColor="@color/boardarcolor"/>
            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                android:id="@+id/txtGarageComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_3"
                android:text="@string/str_quote_from_garage"
                android:textColor="@color/black"
                android:padding="@dimen/icon_back_left_margin"
                android:background="@drawable/rect_inner_boarder"
                android:layout_marginTop="@dimen/icon_back_left_margin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/icon_back_left_margin">
                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Bold_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_3"
                    android:text="@string/str_additional_offer"
                    android:textColor="@color/black"/>
                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/txtOfferPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.00"
                    android:textColor="@color/boardarcolor"
                    android:textSize="@dimen/txt_size_3"
                    android:layout_marginLeft="@dimen/icon_back_left_margin"/>
            </LinearLayout>

            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                android:id="@+id/txtAcceptAdditionalOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_accept_additional_offer"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_3"
                android:background="@color/green_click"
                android:padding="@dimen/icon_back_left_margin"/>
            <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_free_inclusion_by_garage"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_3"
                android:layout_marginTop="@dimen/SignIn_margin"
                android:background="@color/colorAccent"
                android:padding="@dimen/icon_back_left_margin"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/freeInclusionrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_back_left_margin">

            </android.support.v7.widget.RecyclerView>





        </LinearLayout>


    </LinearLayout>



</LinearLayout>