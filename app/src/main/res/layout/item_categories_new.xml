<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/SignIn_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/edittextpadding"
        android:layout_weight="1">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/category_bg"
            android:padding="@dimen/icon_back_left_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:src="@drawable/ic_dummy"/>

                <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/quote_job_text"
                    android:text="@string/app_name"
                    android:textSize="@dimen/txt_size_3"
                    android:layout_marginLeft="@dimen/SignIn_margin"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="5">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/quote_job_text"/>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:layout_weight="10">
    <ImageView
        android:layout_width="@dimen/sb_progrees_margin_lr"
        android:layout_height="@dimen/sb_progrees_margin_lr"
        android:src="@drawable/i_icon"
        android:backgroundTint="@color/quote_job_text"/>
</LinearLayout>



</LinearLayout>