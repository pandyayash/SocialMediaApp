<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/app_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_add_child_downarrow_h">

            <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                android:id="@+id/tvGarageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_size_4" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@color/view_color2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_width_height"
                android:layout_marginTop="@dimen/activity_add_child_downarrow_w"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <technource.autoreum.CustomViews.Widgets.CircularImageView
                        android:id="@+id/iv_image"
                        android:layout_width="@dimen/img_width_height"
                        android:layout_height="@dimen/img_width_height"
                        android:src="@drawable/demo_user" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        app:srb_borderColor="@color/colorPrimary"
                        app:srb_drawBorderEnabled="false"
                        app:srb_fillColor="@color/colorPrimary"
                        app:srb_isIndicator="true"
                        app:srb_numberOfStars="5"
                        app:srb_rating="3"
                        app:srb_starBackgroundColor="@color/view_color2"
                        app:srb_starCornerRadius="1"
                        app:srb_starSize="15dp"
                        app:srb_stepSize="0.5"/>

                    <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                        android:id="@+id/rate_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/icon_back_left_margin"
                        android:text="(3)"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/txt_size_2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1.2">

                    <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                        android:id="@+id/tvReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text=" 24 Reviews"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/txt_size_2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.9">

                    <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                        android:id="@+id/tvDistnace"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Distnace: 0KM"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/txt_size_2" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                android:background="@drawable/rect_inner_boarder"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/activity_add_child_new_margin_tb"
                        android:src="@drawable/location" />

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt_size_6"
                        android:gravity="start"
                        android:text="@string/app_name"
                        android:textColor="#0066CC"
                        android:textSize="@dimen/txt_size_3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/boardarcolor" />


                <LinearLayout
                    android:id="@+id/ll_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/activity_add_child_new_margin_tb"
                        android:src="@drawable/call" />

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/tvCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt_size_6"
                        android:gravity="start"
                        android:text="@string/app_name"
                        android:textColor="#0066CC"
                        android:textSize="@dimen/txt_size_3" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/boardarcolor" />

                <LinearLayout
                    android:id="@+id/ll_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/activity_add_child_new_margin_tb"
                        android:src="@drawable/msg" />

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/tvMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt_size_6"
                        android:gravity="start"
                        android:text="@string/app_name"
                        android:textColor="#0066CC"
                        android:textSize="@dimen/txt_size_3" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_verified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:background="@color/bg_gray"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_verify_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/activity_add_child_new_margin_tb"
                    android:src="@drawable/verified" />

                <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/tvVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/varified_partner"
                    android:textColor="@color/RadiumColor"
                    android:textSize="@dimen/txt_size_3" />

                <ImageView
                    android:id="@+id/img_verify_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/activity_add_child_new_margin_tb"
                    android:src="@drawable/verified" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_no_car_imgs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_no_car_img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activity_reports_new_btn_w"
                            android:src="@drawable/car_demo" />

                        <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/no_images_found"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_3" />

                    </LinearLayout>


                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dialog_help_icons_wh"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/viewpager"
                        app:ci_drawable="@drawable/selecteditem_dot"
                        app:ci_drawable_unselected="@drawable/nonselecteditem_dot" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/garage_profile_footer_details" />

    <include layout="@layout/app_footer" />
</LinearLayout>