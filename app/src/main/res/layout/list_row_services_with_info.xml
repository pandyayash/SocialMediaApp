<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/llTabMain_margin_rl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:background="@drawable/rect_border">

        <LinearLayout
            android:id="@+id/service_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                android:id="@+id/autoText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:padding="@dimen/activity_add_child_new_margin_lr"
                android:text="Some text"
                android:textColor="@color/white"
                android:textColorHint="@color/white_90"
                android:textSize="@dimen/txt_size_2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/activity_add_child_new_margin_tb"
        android:layout_weight="0.005">

        <ImageView
            android:id="@+id/info"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/i_icon"
            android:visibility="visible"/>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_new_inclusion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/SignIn_margin"
        android:visibility="gone"
        android:gravity="center">

        <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
            android:id="@+id/btnAddNewInclusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Inclusion"
            android:textSize="@dimen/txt_size_3"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:paddingTop="@dimen/icon_back_left_margin"
            android:paddingBottom="@dimen/icon_back_left_margin"
            android:paddingLeft="@dimen/SignIn_margin"
            android:paddingRight="@dimen/SignIn_margin"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>