                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                    android:background="@drawable/rect_inner_boarder"
                    android:gravity="center"
                    android:padding="@dimen/activity_add_child_new_margin_tb"
                    android:text="I want to repairs my car tyer"
                    android:textColor="@color/color_Splash"
                    android:textSize="@dimen/txt_size_3" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_add_child_new_margin_tb"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                    android:orientation="horizontal">

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Job# :"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_2" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/txtJobNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/SignIn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/blue_textview_border"
                        android:gravity="start"
                        android:paddingLeft="@dimen/icon_back_left_margin"
                        android:text="@string/app_name"
                        android:textSize="@dimen/txt_size_2" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_add_child_new_margin_tb"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:orientation="horizontal">

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Category :"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_2" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/txtCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/SignIn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/blue_textview_border"
                        android:gravity="start"
                        android:paddingLeft="@dimen/icon_back_left_margin"
                        android:text="@string/app_name"
                        android:textSize="@dimen/txt_size_2" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_add_child_new_margin_tb"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:orientation="horizontal">

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Sub-Category :"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_2" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/txtSubCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/SignIn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/blue_textview_border"
                        android:gravity="start"
                        android:paddingLeft="@dimen/icon_back_left_margin"
                        android:text="@string/app_name"
                        android:textSize="@dimen/txt_size_2" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:orientation="horizontal">

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Car :"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_2" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/txtcar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/SignIn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/blue_textview_border"

                        android:gravity="start"
                        android:paddingLeft="@dimen/icon_back_left_margin"
                        android:text="@string/app_name"
                        android:textSize="@dimen/txt_size_2" />
                </LinearLayout>

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                    android:text="@string/job_discription_question"
                    android:textSize="@dimen/txt_size_2" />

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/txtJobDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_add_child_new_margin_lr"
                    android:background="@drawable/rect_inner_boarder"
                    android:minLines="3"
                    android:padding="@dimen/activity_add_child_new_margin_tb"
                    android:text="@string/short_dummy_text"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/txt_size_2" />

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/txtQuoteFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                    android:text="@string/quote_from_bob_s_garage"
                    android:textSize="@dimen/txt_size_2" />

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/txtQuoteDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_add_child_new_margin_lr"
                    android:background="@drawable/rounded_linearlayout"
                    android:minLines="3"
                    android:padding="@dimen/activity_add_child_new_margin_tb"
                    android:text="@string/short_dummy_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_2" />

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                    android:text="@string/additional_offers"
                    android:textSize="@dimen/txt_size_2" />

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/txtAdditionalDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:layout_marginRight="@dimen/SignIn_margin"
                    android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                    android:background="@drawable/rect_inner_boarder"
                    android:minLines="3"
                    android:padding="@dimen/activity_add_child_new_margin_tb"
                    android:text="@string/short_dummy_text"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/txt_size_2" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/SignIn_margin"
                            android:orientation="horizontal">
                            <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/additional_offers_price"
                                android:textSize="@dimen/txt_size_2"
                                android:layout_marginLeft="@dimen/SignIn_margin"/>
                            <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                                android:id="@+id/txtAddOfferPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/txt_size_2"
                                android:text="$00.00"
                                android:paddingLeft="@dimen/margin_3dp"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/SignIn_margin"
                            android:layout_marginRight="@dimen/SignIn_margin"
                            android:layout_marginTop="@dimen/SignIn_margin"
                            android:orientation="horizontal">

                            <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Cost :"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/txt_size_2" />

                            <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                                android:id="@+id/txtSmallPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:background="@drawable/rounded_linearlayout"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="$10.00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_size_1"
                                android:layout_marginLeft="@dimen/margin_3dp"/>

                            <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_add_child_new_margin_tb"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Status :"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/txt_size_2" />

                            <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                                android:id="@+id/txtSmallStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_linearlayout"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="Accepted"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_size_1"
                                android:layout_marginLeft="@dimen/margin_3dp"/>

                        </LinearLayout>

                        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                            android:id="@+id/txtServiceInclusion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/SignIn_margin"
                            android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                            android:background="@drawable/rect_inner_boarder"
                            android:gravity="center"
                            android:paddingBottom="@dimen/activity_add_child_new_margin_tb"
                            android:paddingLeft="@dimen/activity_add_child_downarrow_h"
                            android:paddingRight="@dimen/activity_add_child_downarrow_h"
                            android:paddingTop="@dimen/activity_add_child_new_margin_tb"
                            android:text="Service Inclusion >>"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_size_4" />

                        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                            android:id="@+id/txtFreeInclusion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/SignIn_margin"
                            android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                            android:background="@drawable/rect_inner_boarder"
                            android:gravity="center"
                            android:paddingBottom="@dimen/activity_add_child_new_margin_tb"
                            android:paddingLeft="@dimen/activity_add_child_downarrow_h"
                            android:paddingRight="@dimen/activity_add_child_downarrow_h"
                            android:paddingTop="@dimen/activity_add_child_new_margin_tb"
                            android:text="Free Inclusion by Garage"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_size_4" />

                        <ListView
                            android:id="@+id/lvFree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/SignIn_margin" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:orientation="vertical">
                        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                            android:id="@+id/btnOfferAccept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/SignIn_margin"
                            android:layout_marginRight="@dimen/SignIn_margin"
                            android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                            android:background="@color/green_btn"
                            android:gravity="center"
                            android:paddingBottom="@dimen/activity_add_child_new_margin_tb"
                            android:paddingLeft="@dimen/activity_add_child_downarrow_h"
                            android:paddingRight="@dimen/activity_add_child_downarrow_h"
                            android:paddingTop="@dimen/activity_add_child_new_margin_tb"
                            android:text="Accept?"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_3"/>

                        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/SignIn_margin"
                            android:layout_marginRight="@dimen/SignIn_margin"
                            android:background="@color/hint_color"
                            android:gravity="center"
                            android:padding="@dimen/activity_add_child_new_margin_tb"
