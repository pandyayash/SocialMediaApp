                        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                            android:id="@+id/btnAward"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/SignIn_margin"
                            android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
