<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/t_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:orientation="vertical"
            android:padding="@dimen/activity_add_child_downarrow_h"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_inner_boarder"
                android:focusable="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_inner_boarder"
                    android:focusable="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:orientation="horizontal">

                        <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                            android:id="@+id/day_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:gravity="center"
                            android:paddingTop="@dimen/activity_add_child_downarrow_h"
                            android:text="SUNDAY"
                            android:textColor="@color/black_light_text"
                            android:textSize="@dimen/txt_size_3" />

                        <LinearLayout
                            android:id="@+id/sun"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_add_child_new_margin_tb"
                            android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                            android:layout_weight="1"
                            android:background="@drawable/rect_inner_boarder"
                            android:focusable="false"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:padding="@dimen/activity_add_child_new_margin_tb">

                                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                                    android:id="@+id/edt_sun_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:background="@null"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:singleLine="true"
                                    android:text="8:00"
                                    android:textColor="@color/black_light_text"
                                    android:textColorHint="@color/white_90"
                                    android:textSize="@dimen/txt_size_2" />

                                <ImageView
                                    android:id="@+id/dropdown"
                                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                                    android:focusable="false"
                                    android:src="@drawable/down" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sun1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_add_child_new_margin_lr"
                            android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                            android:layout_weight="1"
                            android:background="@drawable/rect_inner_boarder"
                            android:focusable="false"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:padding="@dimen/activity_add_child_new_margin_tb">

                                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                                    android:id="@+id/edt_am_pm_sun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:background="@null"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="A.M"
                                    android:textColor="@color/black_light_text"
                                    android:textSize="@dimen/txt_size_2" />

                                <ImageView
                                    android:id="@+id/dropdown1"
                                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                                    android:focusable="false"
                                    android:src="@drawable/down" />
                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_add_child_new_margin_lr"
                        android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
                        android:focusable="false"
                        android:orientation="horizontal">

                        <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                            android:id="@+id/day_name1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:gravity="center"
                            android:paddingTop="@dimen/activity_add_child_downarrow_h"
                            android:text="SUNDAY"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_3"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/sun2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_add_child_new_margin_tb"
                            android:layout_weight="1"
                            android:background="@drawable/rect_inner_boarder"
                            android:focusable="false"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:padding="@dimen/activity_add_child_new_margin_tb">

                                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                                    android:id="@+id/edt1_sun_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:singleLine="true"

                                    android:text="8:00"
                                    android:textColor="@color/black_light_text"
                                    android:textColorHint="@color/white_90"
                                    android:textSize="@dimen/txt_size_2" />

                                <ImageView
                                    android:id="@+id/dropdown2"
                                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                                    android:focusable="false"
                                    android:src="@drawable/down" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sun3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_add_child_new_margin_lr"
                            android:layout_weight="1"
                            android:background="@drawable/rect_inner_boarder"
                            android:focusable="false"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:padding="@dimen/activity_add_child_new_margin_tb">

                                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                                    android:id="@+id/edt1_am_pm_sun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:background="@null"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="A.M"
                                    android:textColor="@color/black_light_text"
                                    android:textColorHint="@color/white_90"
                                    android:textSize="@dimen/txt_size_2" />

                                <ImageView
                                    android:id="@+id/dropdown3"
                                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                                    android:focusable="false"
                                    android:src="@drawable/down" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>