<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/media_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/btnUserProfile_margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/llTabMain_margin_rl"
                android:layout_marginLeft="@dimen/activity_add_child_new_et_h"
                android:layout_marginRight="@dimen/activity_add_child_new_et_h"
                android:layout_marginTop="@dimen/llTabMain_margin_rl"
                android:background="@drawable/rounded_linearlayout">

                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                    android:id="@+id/tv_new_postjob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/edittextpadding"
                    android:text="POST A NEW JOB"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cat1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8.5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:src="@drawable/haxa" />

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="@dimen/width_height_ivClose"
                        android:layout_height="@dimen/width_height_ivClose"
                        android:layout_centerInParent="true"
                        android:src="@drawable/car_repair" />

                </RelativeLayout>

                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Light_Textview
                    android:id="@+id/cat_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_add_child_downarrow_h"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Car Repairs"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/paddingLeft_ivCancel" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cat2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8.5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:src="@drawable/haxa" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="@dimen/width_height_ivClose"
                        android:layout_height="@dimen/width_height_ivClose"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mechanic" />

                </RelativeLayout>

                <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Light_Textview
                    android:id="@+id/cat_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_add_child_downarrow_h"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Air Condition System"
                    android:textColor="@color/black_light_text"
                    android:textSize="@dimen/paddingLeft_ivCancel" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>