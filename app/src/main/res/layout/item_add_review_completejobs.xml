<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_back_left_margin"
        android:layout_marginRight="@dimen/icon_back_left_margin"
        android:layout_marginTop="@dimen/icon_back_left_margin"
        android:background="@color/item_bg"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_bg"
            android:orientation="vertical"
            android:padding="@dimen/SignIn_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                    android:id="@+id/textJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Job Tittle #01"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_size_2" />

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-6dp"
                    android:layout_weight="2.3"
                    android:gravity="start"
                    android:text="July 13, 2017"
                    android:textColor="@color/date"
                    android:textSize="@dimen/txt_size_1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_back_left_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/txtToUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To User: "
                        android:textColor="@color/date"
                        android:textSize="@dimen/txt_size_2" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textCarModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_back_left_margin"
                        android:text="Honda, City 2.0 TFSI Premium Plus"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/txt_size_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/icon_back_left_margin"
                    android:layout_weight="2.5"
                    android:orientation="vertical">


                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/icon_back_left_margin"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/activity_add_child_new_margin_tb"
                        android:text="Provide Review"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>