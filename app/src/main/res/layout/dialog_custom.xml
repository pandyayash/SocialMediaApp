<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center"
  android:background="@color/full_transparent_white"
  android:gravity="center"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/icon_back_left_margin"
    android:background="@color/white"
    android:orientation="vertical">

    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
      android:id="@+id/tv_title"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/SignIn_margin"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="Medium Text"
      android:textColor="@color/white"
      android:textSize="@dimen/txt_size_4" />

    <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
      android:id="@+id/tv_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/SignIn_margin"
      android:text="TextView"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/txt_size_4" />

    <LinearLayout
      android:id="@+id/btn_cancel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/txt_size_1"
      android:layout_gravity="center"
      android:background="@color/colorPrimary"
      android:orientation="vertical">

      <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
        style="@style/BaseInputWhiteCursor"
        android:textStyle="bold"
        android:layout_margin="@dimen/icon_back_left_margin"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    </LinearLayout>
  </LinearLayout>

</LinearLayout>
