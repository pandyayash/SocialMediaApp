<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/full_transparent_white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/icon_back_left_margin">

        <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/SignIn_margin"
            android:gravity="center"
            android:text="Medium Text"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_4"
            android:textStyle="bold" />

        <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/SignIn_margin"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_size_4" />

        <LinearLayout
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/txt_size_1"
            android:background="@drawable/corner_button"
            android:orientation="vertical">

            <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                style="@style/BaseInputWhiteCursor"
                android:layout_margin="@dimen/icon_back_left_margin"
                android:text="@string/ok"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
