<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_add_child_new_margin_lr">

        <ImageView
            android:id="@+id/ll_back"
            android:layout_width="@dimen/marginLeft_ll2"
            android:layout_height="@dimen/marginLeft_ll2"
            android:layout_marginLeft="@dimen/activity_add_child_new_margin_lr"
            android:src="@drawable/arrow" />


        <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_registrat_ion"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_4" />

        <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
            android:id="@+id/tv_skipCarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/tv_Screening_padding"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_4" />

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_add_child_downarrow_h"
        android:fillViewport="true"
        app:tabBackground="@drawable/tab_indicator"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="4dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/black" />


    <technource.greasecrowd.CustomViews.Widgets.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>