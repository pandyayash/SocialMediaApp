<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  android:layoutDirection="rtl"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
      android:id="@+id/ll_top"
      layout="@layout/nav_header_phone_navigation_drawer" />

    <android.support.v7.widget.RecyclerView
      android:id="@+id/list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/notes_dialog_addnote_h"
      android:layout_below="@+id/ll_top"
      android:layout_gravity="start"
      android:background="@color/white"
      android:choiceMode="singleChoice"
      android:divider="@null"
      android:scrollbars="none" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/cb_keepSignIn_margin_t"
        android:layout_marginBottom="@dimen/cb_keepSignIn_margin_t"
        android:orientation="vertical">


        <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cb_keepSignIn_hw"
          android:layout_marginStart="@dimen/et_Password_margin_t"
          android:layout_marginLeft="@dimen/et_Password_margin_t"
          android:gravity="right"
          android:text="@string/simple_text"
          android:textAllCaps="true"
          android:visibility="gone"
          android:textColor="@color/hint_color"
          android:textSize="@dimen/txt_size_2" />

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/et_Password_margin_t"
          android:background="@color/hint_color" />

        <LinearLayout
          android:id="@+id/ll_logout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <aayushiprojects.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_add_child_downarrow_h"
            android:layout_marginBottom="@dimen/activity_add_child_downarrow_h"
            android:layout_marginStart="@dimen/et_Password_margin_t"
            android:layout_marginLeft="@dimen/et_Password_margin_t"
            android:gravity="right"
            android:text="@string/signout"
            android:textAllCaps="true"
            android:textColor="@color/red_color"
            android:textSize="@dimen/txt_size_5" />

        </LinearLayout>


      </LinearLayout>


    </LinearLayout>

  </RelativeLayout>


</LinearLayout>