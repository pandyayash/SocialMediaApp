<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/icon_back_left_margin"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/SignIn_margin"
            android:layout_marginTop="@dimen/SignIn_margin"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_message_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txt_size_7"
                android:layout_marginRight="-8dp"
                android:background="@drawable/rounded_corners_chat"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:maxWidth="250dp"
                android:minLines="2"
                android:paddingBottom="@dimen/icon_back_left_margin"
                android:paddingLeft="@dimen/SignIn_margin"
                android:paddingRight="@dimen/SignIn_margin"
                android:paddingTop="@dimen/icon_back_left_margin"
                android:text="@string/app_name"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="@dimen/cb_keepSignIn_hw"
                android:layout_height="@dimen/cb_keepSignIn_hw"
                android:layout_marginTop="@dimen/SignIn_margin"
                android:src="@drawable/triangle"
                android:tint="@color/white" />

            <technource.greasecrowd.CustomViews.Widgets.CircularImageView
                android:id="@+id/iv_profile_s"
                android:layout_width="@dimen/listitem_purchase_btn_h"
                android:layout_height="@dimen/listitem_purchase_btn_h"
                android:layout_marginTop="@dimen/SignIn_margin"
                android:src="@drawable/no_user" />

        </LinearLayout>

        <TextView
            android:id="@+id/senderName"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minLines="2"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_size_0" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/SignIn_margin"
            android:orientation="horizontal">

            <technource.greasecrowd.CustomViews.Widgets.CircularImageView
                android:id="@+id/iv_profile_r"
                android:layout_width="@dimen/listitem_purchase_btn_h"
                android:layout_height="@dimen/listitem_purchase_btn_h"
                android:layout_marginTop="@dimen/SignIn_margin"
                android:src="@drawable/no_user" />

            <ImageView
                android:layout_width="@dimen/cb_keepSignIn_hw"
                android:layout_height="@dimen/cb_keepSignIn_hw"
                android:layout_marginTop="@dimen/SignIn_margin"
                android:rotation="180"
                android:src="@drawable/triangle"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_message_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="@dimen/txt_size_7"
                android:background="@drawable/rounded_corners_chat"
                android:gravity="center"
                android:maxWidth="250dp"
                android:minLines="2"
                android:paddingBottom="@dimen/icon_back_left_margin"
                android:paddingLeft="@dimen/SignIn_margin"
                android:paddingRight="@dimen/SignIn_margin"
                android:paddingTop="@dimen/icon_back_left_margin"
                android:text="@string/app_name"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minLines="2"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_size_0" />
    </LinearLayout>

</LinearLayout>