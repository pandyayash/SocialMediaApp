<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimary"
  android:orientation="vertical">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:weightSum="10">

      <ImageView
        android:id="@+id/ll_back"
        android:layout_width="@dimen/marginLeft_ll2"
        android:layout_height="@dimen/marginLeft_ll2"
        android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
        android:layout_marginLeft="@dimen/activity_add_child_new_margin_lr"
        android:src="@drawable/arrow" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="bottom|center"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:weightSum="3.5">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2.5"
          android:layout_gravity="bottom|center"
          android:gravity="center_vertical|center"
          android:orientation="vertical"
          android:weightSum="6">

          <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:src="@drawable/logo"
              android:visibility="gone"/>
          <technource.autoreum.CustomViews.Widgets.Poppins_Bold_Textview
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="@string/app_name"
              android:textSize="@dimen/notes_dialog_menu_h"
              android:textColor="@color/red_color"
              android:gravity="center"
              android:layout_gravity="center"/>
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/activity_add_child_spinner_h"
          android:layout_marginRight="@dimen/activity_add_child_spinner_h"
          android:background="@color/edittext_bg">

          <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
              android:inputType="textNoSuggestions|textCapSentences"
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_add_child_downarrow_h"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/username_or_email"
            android:textColor="@color/white"
            android:textColorHint="@color/white_90"
            android:textSize="@dimen/txt_size_4" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
          android:layout_marginLeft="@dimen/activity_add_child_spinner_h"
          android:layout_marginRight="@dimen/activity_add_child_spinner_h"
          android:background="@color/edittext_bg">

          <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_add_child_downarrow_h"
            android:background="@null"
            android:gravity="center"
            android:inputType="textPassword"
            android:textColorHint="@color/white_90"
            android:hint="@string/password"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_4" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
          android:layout_marginLeft="@dimen/activity_add_child_spinner_h"
          android:layout_marginRight="@dimen/activity_add_child_spinner_h"
            android:background="@drawable/white_bg">

          <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_add_child_downarrow_h"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_size_4" />

        </LinearLayout>

        <technource.autoreum.CustomViews.Widgets.Poppins_Light_Textview
          android:id="@+id/forget_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_add_child_new_margin_tb"
          android:layout_gravity="bottom"
          android:padding="@dimen/activity_add_child_new_margin_tb"
          android:gravity="center"
          android:text="@string/forgot_password"
          android:textColor="@color/text_color"
          android:textSize="@dimen/txt_size_3"
          android:visibility="visible" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_add_child_downarrow_w"
          android:layout_marginLeft="@dimen/grid_item_hw"
          android:layout_marginRight="@dimen/grid_item_hw"
          android:gravity="center"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/facebook"
            android:layout_width="@dimen/timer_w"
            android:layout_height="@dimen/timer_w"
            android:layout_marginRight="@dimen/activity_add_child_new_margin_tb"
            android:src="@drawable/facebook" />

          <ImageView
            android:id="@+id/google"
            android:layout_width="@dimen/timer_w"
            android:layout_height="@dimen/timer_w"
            android:layout_marginLeft="@dimen/activity_add_child_new_margin_tb"
            android:src="@drawable/g_plus" />

        </LinearLayout>

        <technource.autoreum.CustomViews.Widgets.Poppins_Light_Textview
          android:id="@+id/signup_txt"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_signup_layout_margin_lr"
          android:layout_gravity="bottom"
          android:padding="@dimen/activity_add_child_new_margin_tb"
          android:gravity="center"
          android:text="Don't Have an Account? Sign Up here"
          android:textColor="@color/text_color"
          android:textSize="@dimen/txt_size_3"
          android:visibility="visible" />

        <com.facebook.login.widget.LoginButton
          android:id="@+id/login_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_gravity="center_horizontal"
          android:text="connect_with_facebook"
          android:visibility="gone" />

      </LinearLayout>

    </LinearLayout>


  </ScrollView>

</LinearLayout>