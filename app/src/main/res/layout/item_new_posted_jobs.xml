<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_back_left_margin"
        android:layout_marginRight="@dimen/icon_back_left_margin"
        android:layout_marginTop="@dimen/icon_back_left_margin"
        android:background="@color/item_bg"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_bg"
            android:orientation="vertical"
            android:padding="@dimen/SignIn_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                    android:id="@+id/textJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Job Tittle #01"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_size_2" />

                <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-6dp"
                    android:layout_weight="2.3"
                    android:gravity="start"
                    android:text="July 13, 2017"
                    android:textColor="@color/date"
                    android:textSize="@dimen/txt_size_1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_back_left_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textJobDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/short_dummy_text"
                        android:textColor="@color/date"
                        android:textSize="@dimen/txt_size_2" />

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textCarModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_back_left_margin"
                        android:text="Honda, City 2.0 TFSI Premium Plus"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/txt_size_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/icon_back_left_margin"
                    android:layout_weight="2.5"
                    android:orientation="vertical">

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textQuotesCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Total Quotes : 10"
                        android:textColor="@color/date"
                        android:textSize="@dimen/txt_size_1" />

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Distance : 1000"
                        android:textColor="@color/date"
                        android:textSize="@dimen/txt_size_1"
                        android:visibility="gone" />

                    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                        android:id="@+id/textPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/icon_back_left_margin"
                        android:background="@drawable/corner_button"
                        android:padding="@dimen/SignIn_padding"
                        android:text="$10"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_3" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">
                <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
                    android:id="@+id/txtAddReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/icon_back_left_margin"
                    android:text="@string/str_review_rate"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_size_3"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:max="5"
                    android:rating="0"
                    style="@style/RatingBarstyleNew"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/SignIn_margin"/>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>