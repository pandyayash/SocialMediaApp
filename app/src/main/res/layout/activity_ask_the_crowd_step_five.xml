<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/app_header" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_add_child_downarrow_w"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Describe your question for the crowd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_4" />

                    <technource.autoreum.CustomViews.Widgets.Poppins_Medium_EditText
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_add_child_downarrow_h"
                        android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                        android:background="@drawable/rect_inner_boarder"
                        android:ellipsize="end"
                        android:gravity="top|left"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="4"
                        android:maxLines="8"
                        android:minLines="4"
                        android:overScrollMode="always"
                        android:paddingBottom="@dimen/activity_add_child_downarrow_h"
                        android:paddingLeft="@dimen/activity_add_child_new_margin_tb"
                        android:paddingRight="@dimen/activity_add_child_downarrow_h"
                        android:paddingTop="@dimen/activity_add_child_downarrow_h"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/SignIn_margin"
                        android:textCursorDrawable="@drawable/edittext_cursor"/>

                    <LinearLayout
                        android:id="@+id/ll_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_add_child_downarrow_h"
                        android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                        android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                        android:background="@drawable/corner_button"
                        android:gravity="center"
                        android:padding="@dimen/activity_add_child_new_margin_tb">

                        <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                            android:id="@+id/buttonChange"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/continue_"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_5" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_back_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_add_child_downarrow_h"
                        android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                        android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                        android:background="@drawable/grey_rounder_corner"
                        android:padding="@dimen/activity_add_child_new_margin_tb">

                        <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/back"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_5" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_add_child_downarrow_h"
                        android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                        android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                        android:background="@drawable/grey_rounder_corner"
                        android:padding="@dimen/activity_add_child_new_margin_tb">

                        <technource.autoreum.CustomViews.Widgets.Poppins_Medium_Textview
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_5" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    <include layout="@layout/app_footer" />
</LinearLayout>