<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="@dimen/SignIn_margin"
    tools:context="technource.greasecrowd.activities.GenerateSafetyReportGarageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ll_indication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_back_left_margin"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_weight="1.5">
                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text=""
                    android:background="#00BB7E"
                    android:textSize="@dimen/txt_size_3"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_green"
                    android:layout_gravity="center_vertical"/>

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checked &amp; OK"
                    android:textSize="@dimen/txt_size_3"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="@dimen/icon_back_left_margin"
                android:orientation="horizontal"
                android:layout_weight="1">
                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text=""
                    android:background="#ffcf3b"
                    android:textSize="@dimen/txt_size_3"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/SignIn_margin"
                    android:visibility="gone"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_yellow"
                    android:layout_gravity="center_vertical"/>

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Future Attention needed"
                    android:textSize="@dimen/txt_size_3"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="@dimen/icon_back_left_margin"
            android:orientation="horizontal">
            <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text=""
                android:background="#ff4e63"
                android:textSize="@dimen/txt_size_3"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/SignIn_margin"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_red"
                android:layout_gravity="center_vertical"/>

            <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Immediate Attention Needed"
                android:textSize="@dimen/txt_size_3"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"/>



        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/SignIn_margin">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_general_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/SignIn_margin"
        android:layout_marginRight="@dimen/SignIn_margin"
        android:layout_marginTop="@dimen/SignIn_margin"
        android:orientation="vertical"
        android:visibility="gone">

        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Comments"
            android:visibility="gone"/>
        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Edittext
            android:id="@+id/edtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="General Comments"
            android:minLines="2"
            android:maxLines="4"
            android:padding="@dimen/icon_back_left_margin"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:textSize="@dimen/txt_size_3"
            android:background="@drawable/blue_textview_border"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/SignIn_margin"
        android:orientation="horizontal">

        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
            android:id="@+id/btnDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_3"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Detail"
            android:paddingTop="@dimen/icon_back_left_margin"
            android:paddingBottom="@dimen/icon_back_left_margin"
            android:layout_marginLeft="@dimen/SignIn_margin"/>
        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
            android:id="@+id/btnPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_3"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:paddingTop="@dimen/icon_back_left_margin"
            android:paddingBottom="@dimen/icon_back_left_margin"
            android:text="Print"
            android:layout_marginLeft="@dimen/SignIn_margin"/>
        <technource.greasecrowd.CustomViews.Widgets.Poppins_Regular_Textview
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_3"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:paddingTop="@dimen/icon_back_left_margin"
            android:paddingBottom="@dimen/icon_back_left_margin"
            android:text="Save"
            android:layout_marginRight="@dimen/SignIn_margin"
            android:layout_marginLeft="@dimen/SignIn_margin"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>
