<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:baselineAligned="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_add_child_downarrow_w"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_add_child_downarrow_w"
            android:layout_marginTop="@dimen/activity_add_child_downarrow_h"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/ll_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:background="@color/edittext_bg">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/select_make"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_90"
                    android:textSize="@dimen/txt_size_4" />

                <ImageView
                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:rotation="270"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:background="@color/edittext_bg">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/select_model"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_90"
                    android:textSize="@dimen/txt_size_4" />

                <ImageView
                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:rotation="270"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/activity_add_child_new_margin_lr"
                android:background="@color/edittext_bg">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_badge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/select_badge_variant"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_90"
                    android:textSize="@dimen/txt_size_4" />

                <ImageView
                    android:layout_width="@dimen/activity_add_child_downarrow_h"
                    android:layout_height="@dimen/activity_add_child_downarrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_add_child_downarrow_h"
                    android:rotation="270"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_add_child_new_margin_tb"
                    android:layout_weight="1"
                    android:background="@color/edittext_bg">

                    <CheckBox
                        android:id="@+id/autoCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignRight="@+id/autoText"
                        android:layout_centerVertical="true"
                        android:checked="true" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:id="@+id/autoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/auto"
                        android:background="@null"
                        android:hint="@string/automatic"
                        android:paddingBottom="@dimen/activity_add_child_downarrow_h"
                        android:paddingLeft="@dimen/activity_add_child_new_margin_tb"
                        android:paddingRight="@dimen/activity_add_child_downarrow_h"
                        android:paddingTop="@dimen/activity_add_child_downarrow_h"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_90"
                        android:textSize="@dimen/txt_size_4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_add_child_new_margin_tb"
                    android:layout_weight="1"
                    android:background="@color/edittext_bg">

                    <CheckBox
                        android:id="@+id/manualCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignRight="@+id/autoText"
                        android:layout_centerVertical="true"
                        android:checked="false" />

                    <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                        android:id="@+id/manualTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/manual"
                        android:paddingBottom="@dimen/activity_add_child_downarrow_h"
                        android:paddingLeft="@dimen/activity_add_child_new_margin_tb"
                        android:paddingRight="@dimen/activity_add_child_downarrow_h"
                        android:paddingTop="@dimen/activity_add_child_downarrow_h"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_90"
                        android:textSize="@dimen/txt_size_4" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@color/edittext_bg">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_reg_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/registration_number"
                    android:inputType="text"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_90"
                    android:textSize="@dimen/txt_size_4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@color/edittext_bg">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_EditText
                    android:id="@+id/edt_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_90"
                    android:textSize="@dimen/txt_size_4" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/add_more_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_screening_detail_header_h"
                android:layout_marginRight="@dimen/row_screening_detail_header_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/activity_add_child_downarrow_w"
                    android:layout_height="@dimen/activity_add_child_downarrow_w"
                    android:src="@drawable/add" />

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:text="ADD MORE CAR"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_4" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_add_child_spinner_h"
                android:layout_marginRight="@dimen/activity_add_child_spinner_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@color/white">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                    android:id="@+id/registerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:text="@string/register"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_size_4" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_add_child_spinner_h"
                android:layout_marginRight="@dimen/activity_add_child_spinner_h"
                android:layout_marginTop="@dimen/row_screening_detail_pb_margin_lr"
                android:background="@color/white"
                android:visibility="invisible">

                <technource.greasecrowd.CustomViews.Widgets.Poppins_Medium_Textview
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/activity_add_child_downarrow_h"
                    android:text="@string/register"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_size_4" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>