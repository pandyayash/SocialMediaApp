<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="technource.autoreum.activities.ViewFollowUpWorkActivity">

    <include layout="@layout/app_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <technource.autoreum.CustomViews.Widgets.Poppins_Regular_Textview
        android:id="@+id/btnSubmit"
        android:layout_width="@dimen/dialog_app_info_logo_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/SignIn_margin"
        android:layout_marginLeft="@dimen/notes_dialog_close_wh"
        android:layout_marginRight="@dimen/notes_dialog_close_wh"
        android:layout_marginTop="@dimen/icon_back_left_margin"
        android:background="@drawable/corner_button"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_add_child_new_margin_tb"
        android:paddingLeft="@dimen/activity_add_child_downarrow_h"
        android:paddingRight="@dimen/activity_add_child_downarrow_h"
        android:paddingTop="@dimen/activity_add_child_new_margin_tb"
        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_4" />


    <include
        layout="@layout/app_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
